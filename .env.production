# Production Environment Configuration
# Copy this to .env for production deployment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=h5p_production
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# Server Configuration
PORT=3001
NODE_ENV=production

# App Configuration
APP_URL=https://your-app-name.fly.dev
APP_NAME=H5P Interactive Video Platform

# LTI Configuration (for LMS integration)
LTI_SECRET=your_lti_secret_here
LTI_CONSUMER_KEY=h5p-interactive-video

# File Upload Configuration
MAX_FILE_SIZE=500MB
UPLOAD_PATH=/app/uploads

# H5P Configuration
H5P_CONTENT_PATH=/app/h5p-content
H5P_LIBRARY_PATH=/app/h5p-libraries
H5P_TEMP_PATH=/app/h5p-temp

# Security
CORS_ORIGIN=https://your-app-name.fly.dev
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters
